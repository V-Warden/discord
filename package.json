{
	"name": "warden",
	"version": "1.0.0",
	"author": "mk3ext",
	"description": "Warden is a Discord bot that helps you manage your server.",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "turbo run build",
		"fmt": "turbo fmt",
		"lint": "turbo lint",
		"format": "biome format --write",
		"commitlint": "commitlint --edit",
		"db:check": "turbo run db:check",
		"db:generate": "turbo run db:generate",
		"db:migrate": "turbo run db:migrate",
		"db:wipe": "turbo run db:wipe",
		"cm": "cz",
		"test": "turbo run test"
	},
	"engines": {
		"node": ">=23.5.0"
	},
	"packageManager": "pnpm@9.15.4",
	"devDependencies": {
		"@biomejs/biome": "catalog:dev",
		"@commitlint/cli": "catalog:dev",
		"@commitlint/config-conventional": "catalog:dev",
		"@tsconfig/node23": "catalog:types",
		"cz-conventional-changelog": "catalog:dev",
		"dotenv": "catalog:",
		"dotenv-cli": "catalog:",
		"turbo": "catalog:dev",
		"typescript": "catalog:dev"
	},
	"commitlint": {
		"extends": ["@commitlint/config-conventional"]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
